@model ClientApplication.ServiceReference1.Music

@{
    ViewBag.Title = "Edit Music";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Music</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MusicID)

    <div class="form-group">
        <div class="control-label col-md-2"><label>Music Name</label></div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MusicName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MusicName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2"><label>Genre</label></div>
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.GenreID, ViewBag.genreSelectionListInEdit as SelectList, "Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.GenreID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
