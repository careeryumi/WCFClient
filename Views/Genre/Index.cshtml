@model IEnumerable<ClientApplication.ServiceReference1.Genre>

@{
    ViewBag.Title = "Genre List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Genre", "Create")
</p>
<table class="table">
    <tr>
        <th>Genre id</th>
        <th>Genre Name</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.GenreID)</td>
            <td>@Html.DisplayFor(modelItem => item.GenreName)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GenreID }) |
                @Html.ActionLink("Details", "Details", new { id = item.GenreID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GenreID })
            </td>
        </tr>
    }

</table>
